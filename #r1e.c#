#include <stdio.h>
#include <assert.h>
#include "common.h"
#include "text/text.h"

/**
 * удаляет пустую строку
 */
static void r1e_line(int index, char *contents, int cursor, void *data);

void r1e(text txt)
{
    /* Применяем функцию r1e_line к каждой строке текста */
    process_r1(txt, r1e_line, NULL);
}

static void r1e_line(int index, char *contents, int cursor, void *data)
{
    /* Функция обработчик всегда получает существующую строку */
    assert(contents != NULL);

    /* Декларируем неиспользуемые параметры */
    UNUSED(index);
    UNUSED(data);
    UNUSED(cursor);
}
